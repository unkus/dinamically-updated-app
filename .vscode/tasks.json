{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ConsoleApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ConsoleApp/ConsoleApp.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "hide": true
        },
        {
            "label": "build WpfApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WpfApp/WpfApp.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "hide": true
        },
        {
            "label": "build UpdaterService",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/UpdaterService/UpdaterService.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "hide": true
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${input:solutionToBuild}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${input:solutionToAction}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish ConsoleApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration", "Release",
                "${workspaceFolder}/ConsoleApp/ConsoleApp.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish WpfApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration", "Release",
                "${workspaceFolder}/WpfApp/WpfApp.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "solutionToBuild",
            "description": "Select solution",
            "default": "${workspaceFolder}/dinamically_updated_app.sln",
            "type": "pickString",
            "options": [
                {
                    "label": "All",
                    "value": "${workspaceFolder}/dinamically_updated_app.sln"
                },
                {
                    "label": "ConsoleApp",
                    "value": "${workspaceFolder}/ConsoleApp/ConsoleApp.sln"
                },
                {
                    "label": "WpfApp",
                    "value": "${workspaceFolder}/WpfApp/WpfApp.sln"
                },
                {
                    "label": "UpdaterService",
                    "value": "${workspaceFolder}/UpdaterService/UpdaterService.sln"
                }
            ]
        },
        {
            "id": "solutionToAction",
            "description": "Select project",
            "type": "pickString",
            "options": [
                {
                    "label": "ConsoleApp",
                    "value": "${workspaceFolder}/ConsoleApp/ConsoleApp.sln"
                },
                {
                    "label": "WpfApp",
                    "value": "${workspaceFolder}/WpfApp/WpfApp.sln"
                },
                {
                    "label": "UpdaterService",
                    "value": "${workspaceFolder}/UpdaterService/UpdaterService.sln"
                }
            ]
        }
    ]
}